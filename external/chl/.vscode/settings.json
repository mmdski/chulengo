{
  "editor.tabSize": 4,
  "files.associations": {
    "*.h": "c"
  },
  "cSpell.words": [
    "chlib",
    "coeff",
    "Domanski",
    "dtype",
    "ineff",
    "libchl",
    "Subdiv",
    "subdivs",
    "subsect"
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "examples/ras/*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.config": "${workspaceFolder}/.clang-tidy",
  "C_Cpp.codeAnalysis.runAutomatically": true,
  "cmake.configureSettings": {
    "BUILD_TESTS": true,
    "BUILD_EXAMPLES": true,
    "INSTALL_GTEST": false,
    "BUILD_GMOCK": false,
    "ENABLE_ASAN": true,
    "ENABLE_LSAN": true,
    "ENABLE_UBSAN": true
  }
}
