{
  "editor.tabSize": 4,
  "files.associations": {
    "*.h": "c"
  },
  "cSpell.words": [
    "BEAVCREK",
    "chlib",
    "chulengo",
    "coeff",
    "CRITCREK",
    "Domanski",
    "dtype",
    "ineff",
    "libchl",
    "libchlib",
    "linestyle",
    "linewidth",
    "markerfacecolor",
    "markersize",
    "ndim",
    "Perim",
    "pymem",
    "Subdiv",
    "subdivs",
    "subsect",
    "xlabel",
    "XSWSE",
    "ylabel"
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "examples/ras/*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.config": "${workspaceFolder}/.clang-tidy",
  "C_Cpp.codeAnalysis.runAutomatically": true,
  "cmake.configureSettings": {},
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,
  "mesonbuild.configureOnOpen": false,
  "mesonbuild.selectRootDir": false
}
